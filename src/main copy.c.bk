#include <stdio.h>
#include "freertos/FreeRTOS.h"
#include "freertos/task.h"
#include "esp_system.h"
#include "esp_log.h"

static const char *TAG = "SERIAL_EXAMPLE";

void app_main(void)
{
    int counter = 0;
    
    while (1) {
        printf("Hello from ESP32! Counter: %d\n", counter);
        ESP_LOGI(TAG, "This is a log message. Counter: %d", counter);
        counter++;
        vTaskDelay(1000 / portTICK_PERIOD_MS);  // 1秒待機
    }
}